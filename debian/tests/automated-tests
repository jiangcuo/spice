#! /bin/sh

set -ex

dh_auto_configure -- \
    --disable-silent-rules \
    --enable-smartcard
make -C subprojects/spice-common/common libspice-common.la libspice-common-server.la
make -C server libspice-server.la
make -C server/tests all
cp -av debian/tests/regression-test.py server/tests
cp -av debian/tests/base_test.ppm server/tests
cd server/tests
./test-display-streaming  --automated-tests

